# FamFlixR example environment file
# Copy this file to `.env` and adjust values as needed.
# For local development we default to SQLite.

# Database
DATABASE_URL="file:./famflix.db"

# JWT
JWT_SECRET="please-change-me-32-characters-min-aaaaaaaaaaaaaaaa"
JWT_REFRESH_SECRET="please-change-me-refresh-32-characters-bbbbbbbbbbbbbbbb"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Session
SESSION_SECRET="please-change-me-session-secret-cccccccccccccccc"
SESSION_TIMEOUT="30m"
COOKIE_SECURE="false"
COOKIE_SAME_SITE="lax"

# API Keys (optional)
OPENAI_API_KEY=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"     # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
AUTH_RATE_LIMIT_MAX="5"

# Redis (optional)
REDIS_URL=""

# Story Mode
FEATURE_STORY_MODE="false"
TTS_PROVIDER="CHATTERBOX"
STORY_AUDIO_PREFIX="stories/audio"

# Object Storage (S3 or compatible)
S3_BUCKET=""
S3_REGION="us-east-1"
S3_ENDPOINT=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_PUBLIC_URL=""
S3_FORCE_PATH_STYLE="false"

# Chatterbox TTS
# Python CLI configuration used by the server to synthesize locally.
CHATTERBOX_SCRIPT_PATH="scripts/chatterbox_tts.py"
PYTHON_BIN="python3"
CHATTERBOX_DEVICE="cpu" # set to "cuda" if you have a compatible GPU
CHATTERBOX_MULTILINGUAL="false"
CHATTERBOX_LANGUAGE_ID=""
CHATTERBOX_EXAGGERATION=""
CHATTERBOX_CFG_WEIGHT=""


# Story worker
STORY_WORKER_CONCURRENCY="2"

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# App
NODE_ENV="development"
PORT="5000"
CLIENT_URL="http://localhost:5000"

# File Upload
MAX_FILE_SIZE="52428800"  # 50MB
UPLOAD_DIR="uploads"

# Email (optional)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL=""

# Billing / Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
